  "type": "project",
  "require": {
    "php": "^8.1",
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1.3",
    "php-di/php-di": "^7.0",
    "respect/validation": "^2.2",
    "monolog/monolog": "^3.0"
  },
  "autoload": {
